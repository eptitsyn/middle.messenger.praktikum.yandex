root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = off

[CHANGELOG.md]
indent_size = false

[*.json]
indent_size = 2 

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
