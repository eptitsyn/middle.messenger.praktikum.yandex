---
language: en
title: Register
stylesheets:
    - register.css
---
{{#extend "base" bodyclass="centercontent"}}
    {{#content "main"}}
    <main>
        <form class="singleframe">
            <div class="form container-vertical">
                <h2>Register</h2>
                {{>input/input label="Firstname" name="first_name"}}
                {{>input/input label="Lastname" name="second_name"}}
                {{>input/input label="Login" name="login"}}
                {{>input/input label="Email" name="email"}}
                {{>input/input label="Password" id="password" type="password"}}
                {{>input/input label="Repeat password" id="password_repeat" type="password"}}
                {{>input/input label="Phone" name="phone" type="tel"}}
                {{>button/button caption="Register" class="signin-button"}}
                {{>button/link class="button__white" caption="Cancel" href="index.hbs"}}
            </div>
        </form>
    </main>
    {{/content}}
{{/extend}}
